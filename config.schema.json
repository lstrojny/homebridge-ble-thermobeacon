{
    "pluginAlias": "BleThermoBeacon",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "debug": {
                "type": "boolean",
                "default": false,
                "title": "Debugging enabled"
            },
            "buttonAsLock": {
                "type": "boolean",
                "default": false,
                "title": "Publish button press as lock",
                "description": "Publish button pressed state as a lock. Pressed button is presented as unlocked, otherwise locked. Can help identify the beacon"
            },
            "devices": {
                "type": "array",
                "title": "List of devices",
                "default": [],
                "items": {
                    "type": "object",
                    "required": ["address", "name"],
                    "properties": {
                        "address": {
                            "type": "string",
                            "title": "Address",
                            "pattern": "^(([0-9a-fA-F]{8}-?)([0-9a-fA-F]{4}-?){3}([0-9a-fA-F]{12}-?)|([0-9a-fA-F]{2}:?){5}[0-9a-fA-F]{2})$",
                            "description": "Bluetooth address of the thermometer. MAC address on Linux, UUID on Mac"
                        },
                        "name": {
                            "type": "string",
                            "title": "Name",
                            "description": "Specify a name for the thermometer in Homebridge"
                        },
                        "buttonAsLock": {
                            "type": "boolean",
                            "title": "Publish button press as lock",
                            "description": "Per device settings to publish button pressed state as a lock"
                        }
                    }
                }
            }
        }
    }
}
