{
    "displayName": "Homebridge BLE Thermobeacon",
    "name": "homebridge-ble-thermobeacon",
    "version": "0.0.11-alpha.0",
    "description": "Homebridge plugin for Brifit/ORIA thermometers.",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lstrojny/homebridge-ble-thermobeacon.git"
    },
    "bugs": {
        "url": "https://github.com/lstrojny/homebridge-ble-thermobeacon/issues"
    },
    "engines": {
        "node": ">=14.18.1",
        "homebridge": ">=1.3.5"
    },
    "main": "dist/src/index.js",
    "bin": {
        "homebridge-ble-thermobeacon-scan": "dist/bin/homebridge-ble-thermobeacon-scan.js"
    },
    "scripts": {
        "_portable_exec": "npmPortableExec() { `npm root`/.bin/$@; }; npmPortableExec",
        "lint": "ifNotCi() { test \"$CI\" && echo \"$2\" || echo \"$1\"; }; npm run _portable_exec -- tsc --noEmit && npm run _portable_exec -- prettier --ignore-path=.gitignore `ifNotCi --write \"--check --cache --cache-strategy content\"` '**/**.{ts,js,json}' && npm run _portable_exec -- eslint `ifNotCi --fix \"--cache --cache-strategy content\"` --ignore-path=.gitignore '**/**.{ts,js,json}'",
        "start": "npm run build && npm run link && nodemon",
        "link": "npm install --no-save file:///$PWD/",
        "build": "rimraf ./dist .tsbuildinfo && tsc",
        "test": "ifNotCi() { test \"$CI\" && echo \"$2\" || echo \"$1\"; }; npm run _portable_exec -- jest `ifNotCi --watchAll --collect-coverage`",
        "prepublishOnly": "npm run lint && npm run build",
        "release": "release-it --only-version"
    },
    "keywords": [
        "homebridge-plugin",
        "ble",
        "bluetooth",
        "thermometer",
        "oria",
        "brifit"
    ],
    "dependencies": {
        "@abandonware/noble": "^1.9.2-1",
        "hap-nodejs": "^0.11.0"
    },
    "devDependencies": {
        "@jest/globals": "^29.3.1",
        "@types/node": "^18.11.17",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "eslint": "^8.29.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "homebridge": "^1.3.5",
        "jest": "^29.3.1",
        "nodemon": "^2.0.13",
        "prettier": "^2.8.1",
        "release-it": "^15.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.4"
    },
    "types": "./dist/src/index.d.ts",
    "homepage": "https://github.com/lstrojny/homebridge-ble-thermobeacon#readme",
    "author": "Lars Strojny <lars@strojny.net>"
}
