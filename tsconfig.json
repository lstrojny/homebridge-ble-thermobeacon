{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "es2018"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "verbatimModuleSyntax": false,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "incremental": true
    },
    "include": ["src/", "tests/", "bin/"],
    "exclude": []
}
